@model IEnumerable<Product> //Numerable deme nedenimiz sırasız veri çkemke için bu sebpeten Listi kaldırdık
@{
    ViewData["Title"] = "Home Page";
}
<div class="card card-body my-3">
    <form asp-action="Index" method="get">
        <div class="container">
            <div class="row">
                <div class="col-md-11">
                    <select name="category" asp-items="ViewBag.Categories" class="form-select">
                        <option value="0">Hepsi</option>
                    </select>
                </div>
                <div class="col-md-1">
                    <button type="submit" class="btn btn-success">Filtrele</button>
                </div>

            </div>
        </div>
    </form>

</div>
<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th style="width: 100px;">@Html.DisplayNameFor(m => m.ProductId)</th>
            <th style="width: 120px;">@Html.DisplayNameFor(m => m.Image)</th>
            <th>@Html.DisplayNameFor(m => m.ProductName)</th>
            <th>@Html.DisplayNameFor(m => m.Price)</th>
            <th style="width: 160px;"></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var prd in @Model)
        {//Modelin içindeki verileri çekelimm
            <tr>
                <td>@prd.ProductId</td>
                <td>
                    <img src=" @Url.Content("~/img/" + prd.Image)" class="img-fluid" alt="">
                </td>
                <td>@prd.ProductName</td>
                <td>@prd.Price</td>
                <td>
                    <a href="" class="btn btn-sm btn-success ">Kaydet</a>
                    <a href="" class="btn btn-sm btn-danger">Düzenle</a>

                </td>
            </tr>
        }
    </tbody>
</table>