@model IEnumerable<Product>
@{
    ViewData["Title"] = "Ürün Yönetimi";
}

<div class="container">
    <h1>Ürün Yönetimi</h1>
    <table class="table table-bordered">
        <thead>
            <tr>
                <th>Ürün ID</th>
                <th>Adı</th>
                <th>Fiyat</th>
                <th>İşlemler</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var product in Model)
            {
                <tr>
                    <td>@product.ProductId</td>
                    <td>@product.ProductName</td>
                    <td>@product.Price</td>
                    <td>
                        <a href="#" class="btn btn-success btn-sm">Düzenle</a>
                        <a href="#" class="btn btn-danger btn-sm">Sil</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
